{
    "name": "risevest-api-backend",
    "version": "1.0.0",
    "description": "A simple post management app for risevest",
    "main": "index.js",
    "scripts": {
      "build": "tsc --resolveJsonModule",
      "typeorm:migration:create": "npm run typeorm migration:create",
      "typeorm:migration:generate": "npm run typeorm migration:generate -d src/typeorm-config.ts ",
      "typeorm:migration:run": "npm run typeorm  migration:run",
      "typeorm:migration:revert": "npm run typeorm -- migration:revert",
      "typeorm": "TS_NODE_BASEURL=./dist ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d ./src/typeorm-config.ts",
      "start:dev": "node dist/index.js",
      "start": "npm run typeorm:migration:run && node dist/index.js",
      "test": "jest"
    },
    "keywords": [
      "risevest",
      "senior",
      "backend",
      "test",
      "test"
    ],
    "author": "Olusola Akinsulere <olusola.akinsulere@gmail.com>",
    "license": "ISC",
    "dependencies": {
      "body-parser": "^1.20.2",
      "cors": "^2.8.5",
      "dotenv": "^16.3.1",
      "express": "^4.18.2",
      "express-validator": "^7.0.1",
      "jest": "^29.6.4",
      "jsonwebtoken": "^9.0.1",
      "method-override": "^3.0.0",
      "pg": "^8.11.3",
      "tsconfig-paths": "^4.2.0",
      "typeorm": "^0.3.17",
      "@types/cors": "^2.8.13",
      "@types/express": "^4.17.17",
      "@types/jest": "^29.5.4",
      "@types/jsonwebtoken": "^9.0.2",
      "@types/method-override": "^0.0.32",
      "@types/node": "^20.5.4",
      "@types/pg": "^8.10.2",
      "ts-jest": "^29.1.1",
      "ts-node": "^10.9.1",
      "typescript": "^5.1.6"
    },
    "devDependencies": {
   
    }
  }